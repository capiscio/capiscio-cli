{
  "name": "capiscio-cli",
  "version": "1.1.0",
  "description": "The definitive CLI tool for validating A2A (Agent-to-Agent) protocol agent cards",
  "keywords": [
    "a2a",
    "agent",
    "validation",
    "cli",
    "protocol",
    "ai",
    "llm",
    "agent-to-agent"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/capiscio/capiscio-cli.git"
  },
  "bugs": {
    "url": "https://github.com/capiscio/capiscio-cli/issues"
  },
  "license": "MIT",
  "author": "Capiscio Team",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "capiscio": "./bin/capiscio.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsup",
    "build:binaries": "node scripts/build-binaries.js",
    "dev": "tsup --watch",
    "test": "npm run test:unit",
    "test:unit": "vitest run src/__tests__",
    "test:integration": "npm run build && vitest run tests/integration tests/e2e",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run src/__tests__ --coverage",
    "test:e2e": "npm run build && vitest run tests/e2e",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "start": "node bin/capiscio.js"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@yao-pkg/pkg": "^6.7.0",
    "esbuild": "^0.25.10",
    "eslint": "^8.57.1",
    "nexe": "^4.0.0-rc.6",
    "tsup": "^8.5.0",
    "typescript": "^5.2.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
